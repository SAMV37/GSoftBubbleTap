<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_3">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Choose a Level"
        android:id="@+id/mod_text"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:layout_marginTop="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_marginTop="27dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mod_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <RelativeLayout
                android:id="@+id/level_0_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/real_button_style"
                android:onClick="on_level_0">

                <TextView
                    android:id="@+id/level_0"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Level 1"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/level_0_score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="High Score: 0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/level_1_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/level_0_layout"
                android:background="@drawable/real_button_style"
                android:onClick="on_level_1"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/level_1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Level 2"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/level_1_score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="High Score: 0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/level_2_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/real_button_style"
                android:onClick="on_level_2"
                android:layout_below="@+id/level_1_layout"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/level_2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Level 3"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/level_2_score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="High Score: 0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/level_3_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/real_button_style"
                android:onClick="on_level_3"
                android:layout_below="@+id/level_2_layout"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/level_3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Level 4"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/level_3_score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="High Score: 0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/level_4_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/real_button_style"
                android:onClick="on_level_4"
                android:layout_below="@+id/level_3_layout"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/level_4"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Level 5"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/level_4_score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="High Score: 0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/level_5_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/real_button_style"
                android:onClick="on_level_5"
                android:layout_below="@+id/level_4_layout"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/level_5"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Level 6"
                    android:textColor="#ffffff"
                    android:textSize="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/level_5_score"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="High Score: 0"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>